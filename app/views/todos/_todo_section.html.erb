<section class="Todos">
    <div class="Todos-Heading">
      <p class="Todos-Heading-Text"><%= section_title %></p>
      <p class="Todos-Heading-Num"><%= todos.completed.count %>/<%= todos.count %></p>
    </div>
    <ul class="Todos-List">
      <% todos.all.map do |todo| %>
        <li class="Todos-ListItem">
          <label class="Todos-Lebel">
            <input class="Todos-CheckBox" type="checkbox" <%= todo.completed ? "checked" : nil %>/>
            <p class="<%= todo.completed ? "Todo-Text Todo-Completed" : "Todo-Text" %>"><%= todo.todo_text %><span class="Todos-Text-Date"><%= (todo.due_today?) ? nil : todo.due_date.to_s(:short) %></span></p>
            <a href="#">
              <%= image_tag(asset_path("delete.png"), :alt => "delete", :class => "Todos-Delete") %>
            </a>
          </label>
        </li>
      <% end %>
    </ul>
</section>
