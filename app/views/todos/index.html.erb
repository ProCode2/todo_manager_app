<!-- Main TodoList Area -->
<main class="TodoList">
  <h1 class="TodoList-Heading">My Todo-list</h1>
  <!-- Add Todo Area -->
  <form class="AddTodo" action="/todos" method="POST">
    <input
      class="AddTodo-TodoText"
      placeholder="What's next?"
      type="text"
      name="todo_text"
    />
    <input class="AddTodo-TodoDate" type="date" name="due_date"/>
    <input class="AddTodo-Button" type="submit" value="Add" />
  </form>

  <%= render partial: "todo_section", locals: {
    section_title: "Overdue",
    todos: Todo.overdue
  } %>
  <%= render partial: "todo_section", locals: {
    section_title: "Due Today",
    todos: Todo.due_today
  } %>
  <%= render partial: "todo_section", locals: {
    section_title: "Due Later",
    todos: Todo.due_later
  } %>
